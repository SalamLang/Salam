{
  "threshold": 50,
  "minLines": 10,
  "minTokens": 100,
  "ignore": [
    "**/build/**",
    "**/node_modules/**", 
    "**/dist/**",
    "**/target/**",
    "**/.git/**",
    "**/assets/**",
    "**/*.json",
    "**/*.md",
    "**/src/stage/ast/asts/**",
    "**/src/utility/**/*_create/*",
    "**/src/utility/**/*_destroy/*",
    "**/src/utility/**/*_json/*",
    "**/src/utility/**/*_log/*"
  ],
  "skipComments": true,
  "ignoreCase": false,
  "reporters": ["console"],
  "format": ["c"],
  "languages": ["c"],
  "absolute": false,
  "gitignore": true,
  "blame": false,
  "silent": true,
  "verbose": false,
  "debug": false,
  "executionId": "salam-jscpd",
  "ignorePattern": [
    "^#include.*",
    "^\\s*//.*",
    "^\\s*/\\*[\\s\\S]*?\\*/",
    "^\\s*$",
    ".*_create\\s*\\(",
    ".*_destroy\\s*\\(",
    ".*_json\\s*\\(",
    ".*_log\\s*\\(",
    ".*_direct_.*\\s*\\(",
    ".*memory_allocation.*",
    ".*if\\s*\\(.*==\\s*NULL\\)",
    ".*DEBUG_ME.*",
    "return\\s+NULL;",
    "#ifndef.*_H_",
    "#define.*_H_",
    "#endif.*_H_"
  ],
  "maxSize": "50kb",
  "maxLines": 2000
}